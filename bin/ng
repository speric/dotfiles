# !/bin/sh
# Super simple wrapper around nginx

function ng_stop {
  echo "🛑"
  nginx -s stop
}

function ng_locate {
  echo "🚴🏼‍♂️"
  cd /usr/local/etc/nginx
}

function ng_nginx {
  echo "🟢"
  nginx
}

if [[ $# > 0 ]]; then
  case "$1" in
    stop )
      ng_stop
      ;;
    locate )
      ng_locate
      ;;
    *)
      ng_nginx
      ;;
  esac
else
  ng_nginx
fi
