# !/bin/sh
# Super simple wrapper around nginx

function ng_stop {
  echo "ðŸ›‘"
  nginx -s stop
}

function ng_locate {
  echo "ðŸš´ðŸ¼â€â™‚ï¸"
  cd /usr/local/etc/nginx
}

function ng_nginx {
  echo "ðŸŸ¢"
  nginx
}

if [[ $# > 0 ]]; then
  case "$1" in
    stop )
      ng_stop
      ;;
    locate )
      ng_locate
      ;;
    *)
      ng_nginx
      ;;
  esac
else
  ng_nginx
fi
